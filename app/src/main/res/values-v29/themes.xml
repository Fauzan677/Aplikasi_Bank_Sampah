<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.BankSampah" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnPrimary">@color/abuabu</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorControlActivated">@color/secondary</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:statusBarColor">@color/light_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.BankSampah.Splash" parent="Theme.SplashScreen">
        <!-- WAJIB untuk Android 12+ -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/logobanksampah_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.BankSampah</item>

        <!-- Tambahan penting untuk jalur kompat & beberapa OEM -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Cegah sistem menggelapkan tema Splash saat tema HP gelap -->
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>