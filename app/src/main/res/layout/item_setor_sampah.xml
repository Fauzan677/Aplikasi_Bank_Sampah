<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/jenisSampahLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jenis_sampah"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_semibold"
             />

        <Button
            android:id="@+id/hapusTambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hapus"
            android:textColor="@color/white"
            android:backgroundTint="@color/merah"
            android:layout_marginStart="10dp"
            />


    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteJenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/pilih_jenis_sampah"
        android:background="@drawable/et_border"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:dropDownHeight="wrap_content"
        android:dropDownVerticalOffset="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:completionThreshold="1"/>

    <TextView
        android:id="@+id/jumlahSetorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jumlah_setor"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_semibold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/editTextJumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/masukkan_jumlah_setor"
        android:inputType="numberDecimal"
        android:background="@drawable/et_border"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:digits="0123456789.,"/>

</LinearLayout>