<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <LinearLayout
        android:id="@+id/container_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/judul"
            android:text="Menabung Sampah"
            style="@style/TextJudulHalaman"
            />

        <View
            android:id="@+id/garis_judul"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/sub_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Setor Sampah!"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Nama Nasabah"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <AutoCompleteTextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Masukkan Nama Nasabah"
            android:background="@drawable/et_border"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:dropDownHeight="wrap_content"
            android:dropDownVerticalOffset="10dp"
            android:inputType="text"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Jenis Sampah"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />

        <AutoCompleteTextView
            android:id="@+id/jenis1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Pilih Jenis Sampah"
            android:background="@drawable/et_border"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:dropDownHeight="wrap_content"
            android:dropDownVerticalOffset="10dp"
            android:inputType="text"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/jumlahLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Jumlah Setor"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/jumlah1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Masukkan Jumlah Setor"
            android:inputType="number"
            android:background="@drawable/et_border"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/containerTambahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:backgroundTint="@color/secondary"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Keterangan"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Keterangan"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="20"
            android:scrollbars="vertical"
            android:padding="10dp"
            android:background="@drawable/et_border"
            android:gravity="top"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:textColor="@color/white"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="30dp"
            />

    </LinearLayout>

</ScrollView>