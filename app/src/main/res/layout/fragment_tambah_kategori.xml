<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray">

    <LinearLayout
        android:id="@+id/layout_konten"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/judul"
            android:text="Tambah Kategori Sampah"
            style="@style/TextJudulHalaman"
            />

        <View
            android:id="@+id/garis_judul"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Kategori Sampah"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Masukkan Kategori Sampah"
            android:inputType="text"
            android:background="@drawable/et_border"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="30dp"
            />

        <Button
            android:id="@+id/hapus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:textColor="@color/white"
            android:backgroundTint="@color/merah"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="30dp"
            />

    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:trackColor="@color/primary"
        app:indicatorSize="60dp"
        app:trackThickness="4dp"
        android:indeterminate="true"
        />

</FrameLayout>