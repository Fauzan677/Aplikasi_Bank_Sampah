<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/judul"
            android:text="Tambah Jenis Sampah"
            style="@style/TextJudulHalaman"
            />

        <View
            android:id="@+id/garis_judul"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/sub_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Jenis Sampah!"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Kategori Sampah"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            />

        <AutoCompleteTextView
            android:id="@+id/kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:hint="Pilih Kategori Sampah"
            android:background="@drawable/et_border"
            android:padding="20dp"
            android:inputType="none"
            android:dropDownHeight="wrap_content"
            android:dropDownVerticalOffset="10dp"
            android:focusable="true"
            android:clickable="true"
            android:cursorVisible="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Jenis Sampah"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/jenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:hint="Masukkan Jenis Sampah"
            android:inputType="text"
            android:background="@drawable/et_border"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Satuan"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            />

        <AutoCompleteTextView
            android:id="@+id/satuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:hint="Masukkan Satuan (Kilogram / Biji)"
            android:inputType="text"
            android:background="@drawable/et_border"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:dropDownHeight="wrap_content"
            android:dropDownVerticalOffset="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Harga"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:hint="Masukkan Harga Sampah"
            android:inputType="text"
            android:background="@drawable/et_border"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Keterangan"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Keterangan"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="20"
            android:scrollbars="vertical"
            android:padding="10dp"
            android:background="@drawable/et_border"
            android:gravity="top"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="30dp"
            />

        <Button
            android:id="@+id/hapus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:textColor="@color/white"
            android:backgroundTint="@color/merah"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="30dp"
            />

    </LinearLayout>

</ScrollView>