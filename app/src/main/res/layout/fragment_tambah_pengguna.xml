<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/layout_konten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            >

            <TextView
                android:id="@+id/judul"
                android:text="@string/tambah_pengguna"
                style="@style/TextJudulHalaman"
                />

            <View
                android:id="@+id/garis_judul"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/nama_nasabah"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:hint="@string/masukkan_nama_nasabah"
                android:inputType="text"
                android:background="@drawable/et_border"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/email_nasabah"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="emailAddress"
                android:hint="@string/masukkan_email_nasabah"
                android:inputType="textEmailAddress"
                android:background="@drawable/et_border"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/kata_sandi"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:hint="@string/masukkan_kata_sandi"
                android:inputType="textPassword"
                android:background="@drawable/et_border"
                android:drawableEnd="@drawable/visibility_off"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/konfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/konfirmasi"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="30dp"
                />

            <Button
                android:id="@+id/hapus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hapus"
                android:textColor="@color/white"
                android:backgroundTint="@color/merah"
                android:layout_marginHorizontal="30dp"
                />

        </LinearLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:trackColor="@color/primary"
            app:indicatorSize="60dp"
            app:trackThickness="4dp"
            android:indeterminate="true"
            />

    </FrameLayout>

</ScrollView>