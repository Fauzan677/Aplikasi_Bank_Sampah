<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/layout_konten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/judul"
                    style="@style/TextJudulHalaman"
                    android:text="@string/tambah_pengguna"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/garis_judul"
                    />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/back"
                    android:src="@drawable/back"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/garis_judul"
                    />

                <View
                    android:id="@+id/garis_judul"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/judul"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_rekening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/no_rekening"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:hint="@string/masukkan_nomor_rekening"
                android:inputType="text"
                android:background="@drawable/et_border"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/nama_nasabah"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:hint="@string/masukkan_nama_nasabah"
                android:inputType="text"
                android:background="@drawable/et_border"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/email_nasabah"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="emailAddress"
                android:hint="@string/masukkan_email_nasabah"
                android:inputType="textEmailAddress"
                android:background="@drawable/et_border"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/alamat"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="Alamat"
                android:hint="@string/masukkan_alamat_nasabah"
                android:inputType="textMultiLine"
                android:lines="3"
                android:background="@drawable/et_border"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/saldo"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/saldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:autofillHints="Saldo"
                android:hint="@string/kosong_jika_nasabah_baru"
                android:inputType="numberDecimal"
                android:background="@drawable/et_border"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:digits="0123456789,."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/kata_sandi"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:hint="@string/masukkan_kata_sandi"
                android:inputType="textPassword"
                android:background="@drawable/et_border"
                android:drawableEnd="@drawable/visibility_off"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/konfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/konfirmasi"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="30dp"
                />

            <Button
                android:id="@+id/hapus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hapus"
                android:textColor="@color/white"
                android:backgroundTint="@color/merah"
                android:layout_marginHorizontal="30dp"
                />

        </LinearLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:trackColor="@color/primary"
            app:indicatorSize="60dp"
            app:trackThickness="4dp"
            android:indeterminate="true"
            />

    </FrameLayout>

</ScrollView>