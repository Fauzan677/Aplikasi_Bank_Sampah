<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_konten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                style="@style/TextJudulHalaman"
                android:text="@string/detail_pengumuman"
                />

            <View
                android:id="@+id/garis_judul"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/gambar"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/gambar_pengumuman" />

            <TextView
                android:id="@+id/teksErrorGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tidak_dapat_menampilkan_gambar"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:fontFamily="@font/nunito_regular"
                />

            <TextView
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_regular"
                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:background="@color/white"
                    >

                    <TextView
                        android:id="@+id/isi_pengumuman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="30dp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                />

            <Button
                android:id="@+id/hapus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hapus"
                android:textColor="@color/white"
                android:backgroundTint="@color/merah"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp"
                />

        </LinearLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:trackColor="@color/primary"
            app:indicatorSize="60dp"
            android:indeterminate="true"
            app:trackThickness="4dp" />

    </FrameLayout>

</ScrollView>